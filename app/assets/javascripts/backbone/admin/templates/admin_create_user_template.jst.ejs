<div class="modal-header">
    <h5 class="muted">Enter values:</h5>
</div>
<div class="modal-body">
    <p><input id="user_email" type="text" size="15" placeholder="E-mail" value="<%= email %>"></p>
    <p><input id="user_name" type="text" size="15" placeholder="Name" value="<%= name %>"></p>
    <p><input id="user_password" type="password" size="15" placeholder="Password" value="<%= password %>"></p>
    <span class="muted">Choose role:</span>
    <p>
	    <input name="role" type="radio" <%= (role["key"] == "patient") ? "checked='checked'" : "" %> value="patient">Patient
        <input name="role" type="radio" <%= (role["key"] == "doctor") ? "checked='checked'" : "" %> value="doctor">Doctor
        <input name="role" type="radio" <%= (role["key"] == "admin") ? "checked='checked'" : "" %> value="admin">Admin
    </p>
    <div id="app_doc" <%= (role["key"] !== "doctor") ? "class='hidden'" : "" %> >
        <span class="muted">Select appropriate doctor:</span>
        <select id="select_list" name="doctor_list">
        </select>
    </div>
</div>
<div class="modal-footer"> 
    <button class="btn btn-success">Go!</button>
    <button class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Close</button>
</div>