        <ul class="nav">
          <li id="home" class="active">
                <p class="nav-action-name">
                    Home
                </p>
            </li>
            
            <li class="dropdown">
                <p class="dropdown-toggle nav-action-name" data-toggle="dropdown" >
                    Actions
                    
                    <span class="caret"></span>
                </p>
                    
